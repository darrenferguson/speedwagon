@model SpeedWagonPage
@{ 
    SpeedWagonContent home = await Model.ContentService.Home(Model.Content);
}
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">

        <a class="navbar-brand" href="/">@(home.GetValue<string>("Title"))</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>

                @foreach (SpeedWagonContent child in await Model.ContentService.Children(home))
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@child.WebUrl()">
                            @child.Name
                        </a>
                    </li>
                }


            </ul>
        </div>
    </div>
</nav>