@model SpeedWagonPage



<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">

        @foreach (var post in await Model.Context.ContentService.Descendants(Model.Content, "Post"))
        {
            <div class="post-preview">
                <a href="@post.WebUrl()">
                    <h2 class="post-title">
                        @post.Name
                    </h2>
                    <h3 class="post-subtitle">
                        Problems look mighty small from 150 miles up
                    </h3>
                </a>
                <p class="post-meta">
                    Posted by
                    <a href="#">Start Bootstrap</a>
                    on September 24, 2019
                </p>
            </div>
            <hr/>
        }


       
        
        <!-- Pager -->
        <div class="clearfix">
            <a class="btn btn-primary float-right" href="http://blog.darren-ferguson.com/">Older Posts &rarr;</a>
        </div>
    </div>
</div>

