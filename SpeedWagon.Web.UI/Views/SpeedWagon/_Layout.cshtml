<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>SpeedWagon</title>
    
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"/>
       
    <style type="text/css">
        .nav-tabs {
            margin-bottom: 20px;
        }
    </style>

    @Html.RenderPartialViewStyles()

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="SpeedWagon" asp-action="Index" class="navbar-brand">SpeedWagon</a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/">WebSite</a>
                    </li>
                    <li><a asp-controller="SpeedWagonContent" asp-action="List">Content</a></li>
                    <li><a asp-controller="SpeedWagonEditor" asp-action="List">Editors</a></li>
                    <li><a asp-controller="SpeedWagonContentType" asp-action="List">Content Types</a></li>
                    <li><a asp-controller="SpeedWagonSearch" asp-action="Index">Search</a></li>
                    <li><a asp-controller="SpeedWagon" asp-action="Install">Install</a></li>
                </ul>
                @await Html.PartialAsync("~/Views/SpeedWagon/_LoginPartial.cshtml")
            </div>
        </div>
    </nav>

    <div class="container body-content" style="margin-top: 50px;">
        @RenderBody()

        <hr />

        <footer>
            <p>&copy; @DateTime.UtcNow.Year - SpeedWagon (Don't fight the feeling)</p>
        </footer>
    </div>
    
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"          
            crossorigin="anonymous"
            integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
    </script>

    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"         
            crossorigin="anonymous"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
    </script>
       
    @RenderSection("Scripts", required: false)

    @Html.RenderPartialViewScripts()

</body>
</html>