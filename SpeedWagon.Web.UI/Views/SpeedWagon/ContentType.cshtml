@model SpeedWagon.Web.Models.View.Editor.ContentTypeViewModel
@{
    Layout = "_Layout";
}

<h2>Content Types</h2>

@if (!Model.ContentTypes.Any())
{
    <p>No types found</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Template</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SpeedWagonContent contentType in Model.ContentTypes)
            {
            <tr>
                <td>@contentType.Name</td>
                <td>@contentType.Template</td>
                <td>[<a asp-controller="SpeedWagon" asp-action="EditContentType" asp-route-id="@contentType.Name">edit</a>]</td>
            </tr>
            }
        </tbody>
    </table>

}

<h3>Create</h3>

<form asp-controller="SpeedWagon" asp-action="ContentType" method="post">

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Name" required="required" asp-for="Name">
        <small class="form-text text-muted">Title case - view Should be created in ~/Views/SpeedWagon/ContentType</small>
    </div>



    <button type="submit" class="btn btn-primary">Create</button>

</form>